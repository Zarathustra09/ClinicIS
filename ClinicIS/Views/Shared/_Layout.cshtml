<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="UTF-8">
	<meta name="viewport" content="width=device-width, initial-scale=1.0">

	<!-- Boxicons -->
	<link href='https://unpkg.com/boxicons@2.0.9/css/boxicons.min.css' rel='stylesheet'>
	<!-- My CSS -->
	<link rel="stylesheet" href="~/style.css">


	<title>Crimson Clinic</title>
</head>
<body>


	<!-- SIDEBAR -->
	<section id="sidebar">
		<a href="#" class="brand">
		@*	<i class='bx bxs-smile'></i>*@
			<span class="text pl-3">Crimson Clinic</span>
		</a>
		<ul class="side-menu top">
			<li>
				   <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Index">
					<i class='bx bxs-dashboard' ></i>
					<span class="text">Dashboard</span>
				</a>
			</li>
			<li>
			 <a class="nav-link" asp-area="" asp-controller="Inventory_Items" asp-action="Index">
					<i class='bx bxs-shopping-bag-alt' ></i>
					<span class="text">Inventory</span>
				</a>
			</li>

			<li>
			 <a class="nav-link" asp-area="" asp-controller="Orders" asp-action="Index">
				 <i class="bx bxs-file"></i> 
					<span class="text">Orders</span>
				</a>
			</li>


			<li>
			 <a class="nav-link" asp-area="" asp-controller="User" asp-action="Index">
					<i class='bx bxs-doughnut-chart'></i>
					<span class="text">Users</span>
				</a>
			</li>

			<li>
			 <a class="nav-link" asp-area="" asp-controller="Complaints" asp-action="Index">
				<i class='bx bxs-error-circle'></i>
					<span class="text">Complaints</span>
				</a>
			</li>
		
		</ul>
		<ul class="side-menu">
			
			<li>
			<a class="nav-link" asp-area="" asp-controller="Login" asp-action="Logout">
				<i class='bx bxs-log-out-circle'></i>
				<span class="text">Logout</span>
			</a>

			</li>
		</ul>
	</section>
	<!-- SIDEBAR -->



	<!-- CONTENT -->
	<section id="content">
		<!-- NAVBAR -->
		<nav>
			<i class='bx bx-menu' ></i>
			<a href="#" class="nav-link">Categories</a>
			<form action="#">
				<div class="form-input">
					<input type="search" placeholder="Search...">
					<button type="submit" class="search-btn"><i class='bx bx-search' ></i></button>
				</div>
			</form>
			<input type="checkbox" id="switch-mode" hidden>
			<label for="switch-mode" class="switch-mode"></label>
			<a href="#" class="notification">
				<i class='bx bxs-bell' ></i>
				<span class="num">8</span>
			</a>
			<a href="#" class="profile">
				<img src="img/people.png">
			</a>
		</nav>
		<!-- NAVBAR -->

		<!-- MAIN -->
		  <main role="main" class="pb-3">
			@RenderBody()
		</main>


		<!-- MAIN -->
	</section>
	<!-- CONTENT -->

	@*<script src="~/script.js"></script>*@

</body>
</html>