@model ClinicIS.Models.Inventory_Items

@{
    ViewData["Title"] = "Delete";
}


<style> 

    /* Style for the Delete confirmation page */

/* Main container */
.delete-container {
    max-width: 600px;
    margin: 0 auto;
    padding: 20px;
}

/* Heading styles */
.delete-container h1 {
    font-size: 24px;
    margin-bottom: 10px;
}

.delete-container h3 {
    font-size: 18px;
    margin-bottom: 20px;
}

/* Details container */
.delete-container .details-container {
    background-color: #f9f9f9;
    padding: 20px;
    border-radius: 5px;
}

/* Details row */
.delete-container .details-container .row {
    margin-bottom: 10px;
}

/* Details labels */
.delete-container .details-container dt {
    font-weight: bold;
}

/* Delete button */
.delete-container .delete-button {
    margin-top: 20px;
}

.delete-container .delete-button .btn {
    margin-right: 10px;
}

/* Back to List link */
.delete-container .back-to-list {
    display: block;
    margin-top: 20px;
    font-size: 14px;
}

</style>


<div class="delete-container">
    <h1>Delete</h1>

    <h3>Are you sure you want to delete this?</h3>

    <div class="details-container">
        <h4>Inventory_Item</h4>
        <hr />
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.item_name)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.item_name)
            </dd>
            <!-- Add other properties as needed -->
        </dl>
    </div>

    <form asp-action="Delete" method="post" class="delete-button">
        <input type="hidden" asp-for="item_id" />
        <input type="submit" value="Delete" class="btn btn-danger" />
        <a asp-action="Index" class="back-to-list">Back to List</a>
    </form>
</div>
